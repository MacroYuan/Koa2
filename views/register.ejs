<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>注册页面</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
         <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
         <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript">
	$(function(){ 
		$("#register").click(function(){ 
			var username = $("#username").val();
			var password = $("#password").val();
			var password1 = $("#password1").val();
			if(password !== password1){ 
				$("#password").css("border","1px solid red");
                $("#password1").css("border","1px solid red");
                window.alert("两次密码输入不一样，请重新输入");
			}else if(password === password1){
			var data = {"username":username,"password":password};
			$.ajax({ 
				url: '/register',
				type: 'post',
				data: data,
				success: function(data,status){ 
					if(status == 'success'){ 
						location.href = 'login';
					}
				},
				error: function(data,err){ 
						location.href = 'register';
				}
			}); 
		}
		});
	});
    </script>
    <style type="text/css">
        body {
            background: url(/images/star.jpg) no-repeat;
            background-size: cover;
        }
        
        h2 {
            color: #999999;
            font: bold;
        }
        
        .form-signin {
            max-width: 330px;
            padding: 15px;
            margin: 0 auto;
        }
        
        input {
            margin-top: 10px;
            margin-bottom: 3px;
        }
        
        .login-center {
            position: relative;
            top: 50%;
            transform: translateY(50%);
        }
    </style>
</head>

<body>
    <div class="container">
        <form class="form-signin well login-center" role="form">
            <h2 class="form-signin-heading">欢迎注册M-Box账号</h2>
            <input type="text" class="form-control" name="username" id="username" placeholder="用户名" required autofocus>
            <input type="password" class="form-control" name="password" id="password" placeholder="密码" required>
            <input type="password" class="form-control" id="password1" placeholder="重复密码" required>
            <label class="checkbox col-md-offset-1">
                <input type="checkbox" value="remember-me">同意<a href="#">用户协议</a>
            </label>
            <button class="btn btn-primary btn-block" type="submit" id="register">注册</button>
        </form>
    </div>
</body>

</html>